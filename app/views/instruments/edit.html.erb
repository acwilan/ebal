<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
		<h3>Editar instrumento</h3>
      </div>
	  <%= form_for(@instrument, role: 'form') do |f|  %>
		<div class="box-body">
		  <%= render 'shared/error_messages', object: f.object %>
		  <div class="form-group">
			<%= f.label :name, class: 'control-label' %>
			<%= f.text_field :name, class: 'form-control' %>
		  </div>
		  <div class="form-group">
			<%= f.label :instrument_category_id, class: 'control-label' %>
			<%= f.select :instrument_category_id, @categories, { prompt: 'Seleccione una categorÃ­a' }, { class: 'form-control' } %>
		  </div>
        </div>
		<div class="box-footer">
		  <%= f.submit 'Guardar', class: 'btn btn-primary' %>
		  <%= link_to 'Cancelar', instruments_path, class: 'btn btn-link' %>
		</div>
	  <% end %>
    </div>
  </div>
</div>